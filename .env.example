# Database (required)
DATABASE_URL=postgresql://user:password@host:5432/dbname
# When running db:seed or migrations from your laptop against Railway Postgres,
# use the PUBLIC connection URL (from Postgres service Variables, e.g. DATABASE_PUBLIC_URL).
# The internal URL (postgres.railway.internal) only works from apps running on Railway.

# Server
PORT=5000
NODE_ENV=production

# JWT Secret (required for auth - change this to a random string in production!)
JWT_SECRET=your-random-secret-string-here

# Google Maps API (optional - enables geocoding, route optimization, map views)
# Requires: Geocoding API, Routes API, Maps JavaScript API enabled
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenAI (optional - enables AI chat assistant)
OPENAI_API_KEY=your-openai-api-key
